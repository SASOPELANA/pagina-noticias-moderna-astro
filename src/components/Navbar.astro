---
import Logo from "../assets/images/logo.svg";
import iconClose from "../assets/images/icon-menu-close.svg";
import IconOpen from "../assets/images/icon-menu.svg";
import NavbarItems from "../components/NavbarItems.astro";
---

<nav class="flex justify-between items-center mb-6">
  <a href="/">
    <Logo />
  </a>
  <NavbarItems isHorizontal={true} />
  <IconOpen id="open-btn" class="cursor-pointer lg:hidden" />
  <div id="menu-modal" class="bg-black/50 fixed inset-0 hidden">
    <div
      class="bg-Off-white absolute right-0 h-screen flex flex-col items-end px-5.25 py-6.75"
    >
      <img
        id="close-btn"
        src={iconClose.src}
        alt="close"
        class="cursor-pointer"
      />

      <NavbarItems />
    </div>
  </div>
</nav>

<script>
  const closeBtm = document.getElementById("close-btn");
  const openBtm = document.getElementById("open-btn");
  const modal = document.getElementById("menu-modal");

  const menuModal = document.querySelector("#menu-modal");
  const menuItems = menuModal?.querySelectorAll("a");

  closeBtm?.addEventListener("click", () => {
    modal?.classList.add("hidden");
  });

  openBtm?.addEventListener("click", () => {
    modal?.classList.remove("hidden");
  });

  menuItems?.forEach((item) => {
    item.addEventListener("click", () => {
      modal?.classList.add("hidden");
    });
  });
</script>
