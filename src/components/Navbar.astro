---
import Logo from "../assets/images/logo.svg";
import iconClose from "../assets/images/icon-menu-close.svg";
import IconOpen from "../assets/images/icon-menu.svg";

interface NavItem {
  name: string;
  href: string;
}

const navItems: NavItem[] = [
  { name: "Inicio", href: "/" },
  { name: "Nuevo", href: "/new" },
  { name: "Popular", href: "/popular" },
  { name: "Tendencias", href: "/trending" },
  { name: "Categor√≠as", href: "/categories" },
];
---

<nav class="flex justify-between items-center">
  <Logo />
  <IconOpen id="open-btn" class="cursor-pointer" />
  <div id="menu-modal" class="bg-black/50 fixed inset-0 hidden">
    <div
      class="bg-Off-white absolute right-0 h-screen flex flex-col items-end px-5.25 py-6.75"
    >
      <img
        id="close-btn"
        src={iconClose.src}
        alt="close"
        class="cursor-pointer"
      />

      <ul class="flex flex-col w-64 gap-6 mt-22">
        {
          navItems.map((item: NavItem) => (
            <li>
              <a
                class="text-lg cursor-pointer hover:text-Soft-orange"
                href={item.href}
              >
                {item.name}{" "}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>

<script>
  const closeBtm = document.getElementById("close-btn");
  const openBtm = document.getElementById("open-btn");
  const modal = document.getElementById("menu-modal");

  const menuItems = document.querySelectorAll("a");

  closeBtm?.addEventListener("click", () => {
    modal?.classList.add("hidden");
  });

  openBtm?.addEventListener("click", () => {
    modal?.classList.remove("hidden");
  });

  menuItems.forEach((item) => {
    item.addEventListener("click", () => {
      modal?.classList.remove("hidden");
    });
  });
</script>
