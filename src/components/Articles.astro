---
import { Image } from "astro:assets";
import ImageArticle1 from "../assets/images/image-retro-pcs.jpg";
import ImageArticle2 from "../assets/images/image-top-laptops.jpg";
import ImageArticle3 from "../assets/images/image-gaming-growth.jpg";

interface Article {
  number: string;
  title: string;
  description: string;
  image: ImageMetadata;
}

const articles: Article[] = [
  {
    number: "01",
    title: "Resucitando PCs Retro",
    description:
      "¿Qué pasa cuando las PCs antiguas reciben actualizaciones modernas?",
    image: ImageArticle1,
  },
  {
    number: "02",
    title: "Top 10 Portátiles de 2025",
    description:
      "Nuestras mejores opciones para diversas necesidades y presupuestos.",
    image: ImageArticle2,
  },
  {
    number: "03",
    title: "El Crecimiento del Gaming",
    description: "Cómo la pandemia ha impulsado nuevas oportunidades.",
    image: ImageArticle3,
  },
];
---

<section class="mb-16">
  {
    articles.map((article) => (
      <article class="flex mb-8 gap-8">
        <Image class="w-[100px]" src={article.image} alt={article.title} />
        <div>
          <p class="text-[2rem] font-bold text-Soft-orange">
            {article.number}{" "}
          </p>
          <a
            class="font-extrabold text-lg cursor-pointer hover:text-Soft-red"
            href="#"
          >
            {article.title}
          </a>
          <p class="text-Dark-grayish-blue text-[0.9375rem]">
            {" "}
            {article.description}{" "}
          </p>
        </div>
      </article>
    ))
  }
</section>
