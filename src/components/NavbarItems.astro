---
interface NavItem {
  name: string;
  href: string;
}

const navItems: NavItem[] = [
  { name: "Inicio", href: "/" },
  { name: "Nuevo", href: "/new" },
  { name: "Popular", href: "/popular" },
  { name: "Tendencias", href: "/trending" },
  { name: "Categor√≠as", href: "/categories" },
];

interface Props {
  isHorizontal?: boolean;
}

const { isHorizontal = false } = Astro.props;
---

<ul
  class={`flex flex-col gap-6 ${isHorizontal ? "flex-row mt-0 hidden lg:flex" : "flex-col mt-22 w-64"}`}
>
  {
    navItems.map((item: NavItem) => (
      <li>
        <a
          class="text-lg cursor-pointer hover:text-Soft-orange"
          href={item.href}
        >
          {item.name}{" "}
        </a>
      </li>
    ))
  }
</ul>
