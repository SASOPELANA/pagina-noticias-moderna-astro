---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// Interface Astro
interface Props {
  title: string;
  icons?: string;
  description?: string;
}

// Creamos una objeto que recibe las props --> Astro.props
const { title, description, icons } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content={description ?? "Noticias modernas y actualizadas."}
    />
    <link rel="icon" type="image/svg+xml" href={icons ?? "/favicon.svg"} />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Pagina de Noticias Moderna."}</title>
  </head>
  <body class="flex flex-col items-center font-Inter">
    <main class="w-full max-w-[375px] px-2 my-8">
      <Navbar />
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
